<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">
    <servlet>
        <servlet-name>CalculateServlet</servlet-name>
        <servlet-class>com.goit.servlets.SimpleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataBaseServlet</servlet-name>
        <servlet-class>com.goit.servlets.DBServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.goit.servlets.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CalculateServlet</servlet-name>
        <url-pattern>/calculate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DataBaseServlet</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>
